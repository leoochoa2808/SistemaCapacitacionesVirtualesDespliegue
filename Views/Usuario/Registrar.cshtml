@model Participante

<link rel="stylesheet" href="~/css/registrarse.css">
<body>
    
    <div class="container">
        <br>
        <div class="row" >
                    <form method="post" asp-controller="Usuario" asp-action="Registrar">
                    <h3 align="center" style="font-size: 40px;">Registrate</h3> 
                        <div class="row gtr-50">         
							<div class="col-4 col-12-mobilep">
                                <label class="col-4 col-12-mobilep">DNI</label>
								<input asp-for="CodParticipante" type="text" id="name" placeholder="Ingrese su DNI" required>
							</div>
							<div class="col-4 col-12-mobilep">
                                <label class="col-4 col-12-mobilep">Primer Nombre</label>
								<input asp-for="PrimerNombre" type="text" id="name" placeholder="Ingrese su primer nombre" required>
							</div>
                            <div class="col-4 col-12-mobilep">
                                <label class="col-4 col-12-mobilep">Segundo Nombre</label>
								<input asp-for="SegundoNombre" type="text" id="name" placeholder="Ingrese su segundo nombre">
							</div>
                            <div class="col-6 col-12-mobilep">
                                <label class="col-6 col-12-mobilep">Apellido Paterno</label>
								<input asp-for="ApellidoPaterno" type="text" id="name" placeholder="Ingrese su apellido paterno" required>
							</div>
                            <div class="col-6 col-12-mobilep">
                                <label class="col-6 col-12-mobilep">Apellido Materno</label>
								<input asp-for="ApellidoMaterno" type="text" id="name" placeholder="Ingrese su apellido materno" required>
							</div>
                            <div class="col-6 col-12-mobilep">
                                <label class="col-6 col-12-mobilep">Correo</label>
								<input asp-for="Correo" type="text" id="name" placeholder="Ingrese su correo" required>
							</div>
                            <div class="col-6 col-12-mobilep">
                                <label class="col-6 col-12-mobilep">Celular</label>
								<input asp-for="Celular" type="text" id="name" placeholder="Ingrese su celular" required>
							</div>
                            <div class="col-6 col-12-mobilep">
                                <label class="col-6 col-12-mobilep">Nombre de ususario</label>
								<input asp-for="username" type="text" id="name" placeholder="Ingrese su nombre de usuario" required>
							</div>
                            <div class="col-6 col-12-mobilep">
                                <label class="col-6 col-12-mobilep">Contraseña</label>
								<input asp-for="pass" type="password" id="name" placeholder="Ingrese su contraseña" required>
							</div> 
                        </div>
                        <center><br><br>
                            <input type="submit" href="" class="button alt create" value="Crear cuenta" />
                            
                        </center>
                    </form>
        </div>
        
    </div><br>
            
</body>