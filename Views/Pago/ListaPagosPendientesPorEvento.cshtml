@{
var evento = TempData["nom_evento"] as string;
var cantidad = TempData["nro_participante"] as int?;
}

@model List<Pago>

	<link rel="stylesheet" type="text/css"
		href="~/vendor/bootstrap/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css"
		href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
	<link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
	<link rel="stylesheet" type="text/css"
		href="~/vendor/perfect-scrollbar/perfect-scrollbar.css">
	<link rel="stylesheet" type="text/css" href="~/css/tableutil.css">
	<link rel="stylesheet" type="text/css" href="~/css/tableconfirmados.css">
	<link rel="stylesheet" href="~/css/main.css" />

	<div class="limiter">
		<br><h3 align="center" style="font-size: 40px;">Pagos Pendientes</h3>
		<div class="container">
				<div class="row">
					<div class="col-md-9">
						<ul class="list-group">
							<li class="list-group-item" style="font-weight:bold; text-align:center;">
								@evento				
							</li>
						</ul>
					</div>
					<div class="col-md-3">
						<ul class="list-group">
							<li class="list-group-item d-flex justify-content-between align-items-center">
								Nro. Pagos: 
								<span class="badge badge-primary badge-pill">@cantidad</span>
							</li>
						</ul>
					</div>
				</div>
			</div>
		<div class="container-table100">
			<div class="wrap-table100">
				<div class="table100">
					<table>
						<thead>
							<tr class="table100-head">
								<th class="column">Nombre Participante</th>
								<th class="column">Correo Participante</th>
								<th class="column">Costo del EVento</th>
								<th class="column">Estado Pago</th>
								<th class="column">Fecha inicio</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var p in Model){
							<tr>
								<td class="column">@p.Participante.PrimerNombre</td>
								<td class="column">@p.Participante.Correo</td>
								<td class="column">@p.Evento.Inversion</td>
								<td class="column">@p.estado_pago</td>
								<td class="column">@p.Evento.FechaInicio</td>
							</tr>}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
	<script src="~/vendor/bootstrap/js/popper.js"></script>
	<script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
	<script src="~/vendor/select2/select2.min.js"></script>
	<script src="~/js/table.js"></script>